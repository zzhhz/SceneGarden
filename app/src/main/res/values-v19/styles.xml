<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.Translucent.System.Bar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BaseColor</item>
        <item name="colorPrimaryDark">@color/BaseColor</item>
        <item name="colorAccent">@color/homeBaseColor</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:actionBarSize">50dp</item>
        <item name="actionBarSize">50dp</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="AppDesignTheme" parent="Theme.Translucent.System.Bar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:actionBarSize">50dp</item>
        <item name="actionBarSize">50dp</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

</resources>
