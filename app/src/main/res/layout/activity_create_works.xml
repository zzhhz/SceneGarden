<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/parentView"
    tools:context="com.miaopu.shop.ui.activity.personal.CreateProjectActivity">
    <include
        android:id="@+id/rl_title"
        layout="@layout/include_toolbar"/>
    <ScrollView
        android:layout_below="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="60dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="作品名称"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/text_18sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/color_de5e3c"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_work_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:hint="请输入您的作品名称"
                        android:textSize="15sp"
                        android:padding="12dp"
                        android:maxLines="8"
                        android:background="@color/main_bg"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选择作品标签"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/text_18sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/color_de5e3c"/>
                    </LinearLayout>
                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/flowlayout"
                        zhy:max_select="-1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">
                    </com.zhy.view.flowlayout.TagFlowLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="子标题"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/text_18sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/color_de5e3c"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/et_zi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:hint="请输入您的子标题"
                        android:textSize="15sp"
                        android:padding="12dp"
                        android:maxLines="8"
                        android:background="@color/main_bg"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="类别"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/text_18sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/color_de5e3c"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_leibie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:padding="12dp"
                        android:background="@color/main_bg">
                        <TextView
                            android:id="@+id/tv_leibie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请选择类别"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bottom_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="区域"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/text_18sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/color_de5e3c"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:padding="12dp"
                        android:background="@color/main_bg">
                        <TextView
                            android:id="@+id/tv_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请选择区域"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bottom_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="尺度"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/text_18sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/color_de5e3c"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_chidu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:padding="12dp"
                        android:background="@color/main_bg">
                        <TextView
                            android:id="@+id/tv_chidu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请选择尺度"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bottom_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="风格"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/text_18sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/color_de5e3c"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:padding="12dp"
                        android:background="@color/main_bg">
                        <TextView
                            android:id="@+id/tv_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请选择风格"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bottom_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="作品描述"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/text_18sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/color_de5e3c"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:hint="请在此处输入您想展示的信息"
                        android:textSize="15sp"
                        android:maxLines="8"
                        android:padding="12dp"
                        android:background="@color/main_bg"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="作品详情展示图片"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/text_18sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/color_de5e3c"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="5dp"
                        android:overScrollMode="never"
                        />
                    <TextView
                        android:id="@+id/tv_check"
                        android:text="选择商品"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/white"
                        android:background="@mipmap/ic_shopping_cart_btn"/>
                    <com.github.jdsjlzx.recyclerview.LRecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.github.jdsjlzx.recyclerview.LRecyclerView>
                    <!--<TextView-->
                    <!--android:visibility="gone"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="施工推荐材料"-->
                    <!--android:layout_marginLeft="15dp"-->
                    <!--android:textSize="@dimen/text_18sp"-->
                    <!--android:textColor="@color/black"-->
                    <!--/>-->

                    <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:layout_marginBottom="60dp"-->
                    <!--android:id="@+id/recycler2"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="@dimen/dp_10"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:overScrollMode="never" />-->
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:gravity="center"
        android:background="@color/color_628ff8"
        android:textSize="@dimen/text_16sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:text="提交作品"/>
</RelativeLayout>
