<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context="com.miaopu.shop.ui.activity.personal.MyProjectActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <include
            layout="@layout/include_toolbar"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ContentPaddingTop"
            android:padding="12dp"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:text="创建"
            />
    </FrameLayout>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    </com.github.jdsjlzx.recyclerview.LRecyclerView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_empty"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="-60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_project_empty"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="这里空空的，"/>
            <TextView
                android:id="@+id/tv_immediately_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_628ff8"
                android:text="马上创建"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
