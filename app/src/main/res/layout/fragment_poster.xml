<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_home_horizontal_item"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text="姓名"/>

        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_head"
            android:src="@mipmap/ic_tag"/>

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_tag"
            android:layout_toRightOf="@+id/iv_tag"
            android:text="首席设计师"
            android:textSize="@dimen/sp_12"/>

        <ImageView
            android:id="@+id/iv_tag_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_tag"
            android:src="@mipmap/ic_tag_service_count"/>

        <TextView
            android:id="@+id/tv_tag_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_tag_service"
            android:layout_toRightOf="@+id/iv_tag_service"
            android:text="首席设计师"
            android:textSize="@dimen/sp_12"/>

        <com.zzh.libs.widget.FlowLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_head">

        </com.zzh.libs.widget.FlowLayout>


        <TextView
            android:id="@+id/tv_find_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_banner_more"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="查看更多"
            android:textColor="@color/white"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>